<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="left"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="left"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon_log_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:tint="@color/colorPrimaryDark"
            android:src="@drawable/ic_account_circle_black_48dp"
            />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/layout_input_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">
        <EditText
            android:id="@+id/input_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:hint="@string/first_name"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/layout_input_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">
        <EditText
           android:id="@+id/input_last_name"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="18dp"
           android:hint="@string/last_name"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/layout_input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">
        <EditText
            android:id="@+id/input_password_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:hint="@string/password"/>
        </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:id="@+id/layout_select_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:textSize="18dp"
                    android:hint="@string/gender_sex"
                    />

                <Spinner
                    android:id="@+id/spinner_sex_registration"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="left"
                    android:layout_marginTop="25dp"
                    android:layout_margin="5dp">

                </Spinner>
            </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_select_blood_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:textSize="18dp"
                android:hint="@string/blood_type"
                />

            <Spinner
                android:id="@+id/spinner_blood_type_registration"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="left"
                android:layout_marginTop="25dp"
                android:layout_margin="5dp">

            </Spinner>
        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/layout_input_close_one_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">
        <EditText
            android:id="@+id/input_close_one_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:hint="@string/close_one"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/layout_input_close_one_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">
        <EditText
            android:id="@+id/input_close_one_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:hint="@string/close_one_number"/>
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/button_registration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="60dp"
            android:text="@string/Inregistration"
            style="@style/BasicButton"/>


    </LinearLayout>
</ScrollView>